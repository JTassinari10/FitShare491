<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="maxLines">1</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
    </style>

    <style name="modifiedTextBox" parent="parent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
    </style>

    <style name="modifiedTextView" parent="parent">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="modifiedLightTextView" parent="parent">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/gray_gainsboro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profileTextView" parent="parent">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="drawableStartCompat">@drawable/ic_smiley</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:background">@null</item>
        <item name = "android:textColorHint">@color/white</item>
    </style>

    <style name="postTextView" parent="parent">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="commentTextView" parent="parent">
        <item name="fontFamily">@font/bona_nova_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedNumberView" parent="parent">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded"
        parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">"#116530"</item>
        <item name="fontFamily">@font/dancing_script</item>
        <item name="android:fontFamily">@font/dancing_script</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">"#116530"</item>
        <item name="fontFamily">@font/dancing_script</item>
        <item name="android:fontFamily">@font/dancing_script</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="nomralDrawable" parent="parent">
        <item name="android:textSize">13sp</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="RoundDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_dialog</item>
    </style>

    <style name="CommentTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="CommentTextInputLayout2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke_black</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>