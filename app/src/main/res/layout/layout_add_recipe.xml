<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--text view for displaying course tracks-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Add Recipe"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtRec_Name"
        android:hint="Name"
        style="@style/modifiedTextBox"/>

    <EditText
        android:id="@+id/txtRec_Descr"
        android:hint="Description"
        style="@style/modifiedTextBox"/>

    <EditText
        android:id="@+id/txtRec_Time"
        android:hint="Preparation Time"
        style="@style/modifiedTextBox"/>

    <EditText
        android:id="@+id/txtRec_Ingr"
        android:hint="Ingredients"
        style="@style/modifiedTextBox"/>

    <EditText
        android:id="@+id/txtRec_Steps"
        android:hint="Steps"
        style="@style/modifiedTextBox"/>


    <!--button for dismissing our dialog-->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/cream"
        android:textSize="16sp"
        app:cornerRadius="30dp" />

</LinearLayout>