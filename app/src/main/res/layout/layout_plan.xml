<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->
        <ImageView
            android:id="@+id/ivExerciseImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_edittext_background"
            android:padding="5dp"
            android:src="@drawable/ic_fitness" />

        <!--Text View to display Recipe Name-->
        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/ivExerciseImage"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <!--Text VIew to display Recipe Description-->
        <TextView
            android:id="@+id/tvReps"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvExerciseName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivExerciseImage"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_light" />

        <TextView
            android:id="@+id/tvSets"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvReps"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivExerciseImage"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_light" />
        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSets"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivExerciseImage"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_light" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCartFunc"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:backgroundTint="@color/black"
        app:srcCompat="@drawable/ic_add"
        android:layout_gravity="center|end"
        app:borderWidth="2dp"
        app:maxImageSize="18dp"
        app:tint="@color/black"
        android:layout_marginEnd="10dp"/>

</androidx.cardview.widget.CardView>