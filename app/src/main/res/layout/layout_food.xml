<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->
        <ImageView
            android:id="@+id/ivFoodImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_edittext_background"
            android:padding="5dp"
            android:src="@drawable/food" />

        <!--Text View to display Recipe Name-->
        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/ivFoodImage"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <!--Text VIew to display Recipe Desccription-->
        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFoodName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivFoodImage"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_light" />

        <TextView
            android:id="@+id/tvProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCalories"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivFoodImage"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_light" />
        <TextView
            android:id="@+id/tvCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProtein"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivFoodImage"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_light" />
        <TextView
            android:id="@+id/tvFats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCarbs"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivFoodImage"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_light" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>