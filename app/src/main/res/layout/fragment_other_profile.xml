<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FeedsFragment"
    android:id="@+id/fragment_feeds"
    android:background="@color/cream"
    >

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/title_layout"
            app:layout_constraintTop_toTopOf="@+id/top"
            android:orientation="horizontal"
            android:paddingRight="30dp"
            >

            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/dancing_script"
                android:paddingTop="20sp"
                android:text="My Profile"
                android:textColor="#116530"
                android:textFontWeight="600"
                android:textSize="35sp"
                android:layout_weight="6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/addFriend"
                android:layout_width="15sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Add Friend"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_layout">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="430px"
                android:layout_height="420px"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="118dp"
                tools:src="@drawable/fitshare"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:hint="First Name, Last Name"
                android:text=""
                android:textFontWeight="600"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Email"
                android:paddingLeft="20sp"
                android:textFontWeight="600"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Phone Number"
                android:paddingLeft="20sp"
                android:textFontWeight="600"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:text=""
                android:hint="Address, Zipcode"
                android:textFontWeight="600"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:text=""
                android:hint="My Bio"
                android:textFontWeight="600"
                android:textSize="25sp"
                />
            <LinearLayout
                android:id="@+id/Container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <CheckBox
                    android:id="@+id/meetUp"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Meet-up Status"
                    android:clickable="false"/>

                <Button
                    android:id="@+id/messageButton"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Message" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Container2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/recipeProfButton"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="View   Recipes" />

                <Button
                    android:id="@+id/fitnessProfButton"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="View Workouts" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>